<?xml version="1.0" encoding="UTF-8"?>
<component name="PlayerEntry" extends="MaskGroup" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
	<interface>
	 	<field id = "itemContent" type = "node" onChange = "showcontent" />
	 </interface>
	<script type="text/brightscript" uri="pkg:/components/screens/PlayerEntry/PlayerEntry.brs" />
	<children>
	
		<LayoutGroup
			id="itemDetails"
			layoutdirection = "Horiz"
    		horizalignment ="center"
    		vertalignment = "top"
    		additemspacingafterchild = "true"  
    		itemspacings = "[5,5]">
    	<Rectangle id="bgTest" 
    		translation = "[0,0]"
    		width="320"
    		height="50"
    		color="0x0FFFA0000"	
    	/>
		<ScrollingLabel id="playerAnswer"
			translation = "[0,0]"
			maxWidth = "320" 
  			height = "0"
			/>
		</LayoutGroup>
		<SoundEffect
			id = "answerSFX"
			uri="pkg:/sounds/ding.wav"
		/>
	</children>
</component>
